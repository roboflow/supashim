{
    "include": ["src"],
    "exclude": ["node_modules/**/*.ts"],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "module": "CommonJS",
        "outDir": "dist/main",
        "rootDir": "src",
        "sourceMap": true,
        "target": "ES2015",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true
    }
}
